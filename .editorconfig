# EditorConfig https://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
max_line_length = 79
trim_trailing_whitespace = true

[*.css]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.yml,*.yaml]
indent_style = space
indent_size = 2
